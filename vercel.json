{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/product/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/products",
      "dest": "backend/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri",
    "CACHE_TTL": "2592000"
  }
}
